<div class="container mt-5">
  <div class="row">
    <div class="col">
      <h1>Add a new restaurant</h1>

      <%= simple_form_for @restaurant do |f| %>
        <%= f.input :name %>
        <%= f.input :phone_number %>
        <%= f.input :address %>
        <%= f.input :category, collection: Restaurant::CATEGORIES %>
        <%= f.submit class: 'btn btn-primary mt-3' %>
      <% end %>
    </div>
  </div>
</div>